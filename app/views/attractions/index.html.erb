<h1>Attractions</h1>

<p><%= link_to "New Attraction", new_attraction_path %></p>

<% @attractions.each do |attraction| %>
  <%= attraction.name %>
  <% if @user.admin? %>
    (<%= link_to "Show #{attraction.name}", attraction_path(attraction) %>)</p>
  <% else %>
    (<%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>)</p>
  <% end %>
<% end %>
